<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.characters.DetailedCharactersFragment">

    <TextView
        android:id="@+id/infoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Generally, here we have acess to all fetched from Api data."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actorTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Actor: "
        app:layout_constraintStart_toStartOf="@+id/infoTv"
        app:layout_constraintTop_toBottomOf="@+id/infoTv" />

    <TextView
        android:id="@+id/actorInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/actorTitleTv"
        app:layout_constraintStart_toEndOf="@+id/actorTitleTv"
        app:layout_constraintTop_toTopOf="@+id/actorTitleTv" />

    <TextView
        android:id="@+id/patronusTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Patronus: "
        app:layout_constraintStart_toStartOf="@+id/actorTitleTv"
        app:layout_constraintTop_toBottomOf="@+id/actorTitleTv" />

    <TextView
        android:id="@+id/patronusInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/patronusTitleTv"
        app:layout_constraintStart_toEndOf="@+id/patronusTitleTv"
        app:layout_constraintTop_toTopOf="@+id/patronusTitleTv" />

    <TextView
        android:id="@+id/spellsTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Spells: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patronusTitleTv" />

    <TextView
        android:id="@+id/spellsInfoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@+id/spellsTitleTv"
        app:layout_constraintStart_toEndOf="@+id/spellsTitleTv"
        app:layout_constraintTop_toTopOf="@+id/spellsTitleTv" />

</androidx.constraintlayout.widget.ConstraintLayout>